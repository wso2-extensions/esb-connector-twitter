<component displayName="Tweets" name="twitter-tweets" type="synapse/template">
    <subComponents>
        <component name="createRetweet">
            <file>createRetweet.xml</file>
            <displayName>Create Retweet</displayName>
            <description>Retweets a specified Tweet.</description>
        </component>
        <component name="createTweet">
            <file>createTweet.xml</file>
            <displayName>Create Tweet</displayName>
            <description>Posts a new Tweet.</description>
        </component>
        <component name="deleteTweet">
            <file>deleteTweet.xml</file>
            <displayName>Delete Tweet</displayName>
            <description>Deletes a Tweet by ID.</description>
        </component>
        <component name="getLikedTweetsList">
            <file>getLikedTweetsList.xml</file>
            <displayName>Get Liked Tweets</displayName>
            <description>Gets Tweets liked by a user.</description>
        </component>
        <component name="searchTweets">
            <file>searchTweets.xml</file>
            <displayName>Search Tweets</displayName>
            <description>Finds Tweets by search criteria.</description>
        </component>
        <component name="getTweetById">
            <file>getTweetById.xml</file>
            <displayName>Get Tweet by ID</displayName>
            <description>Gets Tweet details by ID.</description>
        </component>
        <component name="getTweetsLookup">
            <file>getTweetsLookup.xml</file>
            <displayName>Get Tweets Lookup</displayName>
            <description>Gets details of multiple Tweets by IDs.</description>
        </component>
        <component name="getUserHomeTimeline">
            <file>getUserHomeTimeline.xml</file>
            <displayName>Get Home Timeline</displayName>
            <description>Gets recent Tweets and Retweets from the user's timeline.</description>
        </component>
        <component name="getUserMentionsTimeline">
            <file>getUserMentionsTimeline.xml</file>
            <displayName>Get Mentions Timeline</displayName>
            <description>Gets Tweets mentioning the specified user.</description>
        </component>
        <component name="getUserTweetsTimeline">
            <file>getUserTweetsTimeline.xml</file>
            <displayName>Get User Tweets</displayName>
            <description>Gets Tweets posted by a specific user.</description>
        </component>
        <component name="likeTweet">
            <file>likeTweet.xml</file>
            <displayName>Like Tweet</displayName>
            <description>Likes a Tweet on behalf of the user.</description>
        </component>
        <component name="unlikeTweet">
            <file>unlikeTweet.xml</file>
            <displayName>Unlike Tweet</displayName>
            <description>Unlikes a previously liked Tweet.</description>
        </component>
    </subComponents>
</component>
