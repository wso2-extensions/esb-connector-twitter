<template xmlns="http://ws.apache.org/ns/synapse" name="createRetweet">
    <parameter name="user_id"
               description="The ID of the Twitter user."/>
    <parameter name="tweet_id"
               description="The ID of the Tweet that you would like the user id to Retweet."/>

    <sequence>
        <property name="uri.var.user_id" expression="$func:user_id"/>
        <property name="uri.var.tweet_id" expression="$func:tweet_id"/>

        <payloadFactory media-type="json">
            <format>
                {
                "tweet_id":"$1"
                }
            </format>
            <args>
                <arg expression="$ctx:uri.var.tweet_id"/>
            </args>
        </payloadFactory>

        <property name="uri.var.callEndpointUri"
                  expression="fn:concat(get-property('uri.var.apiUrl'),'/2/users/',get-property('uri.var.user_id'),'/retweets')"/>
        <property name="ContentType" value="application/json" scope="axis2"/>
        <property name="httpMethod" value="post"/>
        <twitter.callWithRetry/>
    </sequence>
</template>
