<component name="twitter-lists" type="synapse/template">
    <subComponents>
        <component name="createList">
            <file>createList.xml</file>
            <displayName>Create List</displayName>
            <description>Creates a new list for the authenticated user.</description>
        </component>
        <component name="deleteList">
            <file>deleteList.xml</file>
            <displayName>Delete List</displayName>
            <description>Deletes a list owned by the authenticated user.</description>
        </component>
        <component name="getFollowingLists">
            <file>getFollowingLists.xml</file>
            <displayName>Get Following Lists</displayName>
            <description>Gets all lists followed by the authenticated or specified user.</description>
        </component>
        <component name="getListById">
            <file>getListById.xml</file>
            <displayName>Get List by ID</displayName>
            <description>Retrieves list details by list ID.</description>
        </component>
        <component name="getListsMemberships">
            <file>getListsMemberships.xml</file>
            <displayName>Get List Memberships</displayName>
            <description>Gets all lists a user is a member of.</description>
        </component>
        <component name="updateList">
            <file>updateList.xml</file>
            <displayName>Update List</displayName>
            <description>Updates a list owned by the authenticated user.</description>
        </component>
    </subComponents>
</component>
