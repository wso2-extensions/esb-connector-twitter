<template xmlns="http://ws.apache.org/ns/synapse" name="deleteList">
    <parameter name="id"
               description="The ID of the List to be deleted."/>

    <sequence>
        <property name="uri.var.id" expression="$func:id"/>

        <property name="uri.var.callEndpointUri"
                  expression="fn:concat(get-property('uri.var.apiUrl'),'/2/lists/',get-property('uri.var.id'))"/>
        <property name="NO_ENTITY_BODY" value="true" type="BOOLEAN" scope="axis2"/>
        <property name="httpMethod" value="delete"/>
        <twitter.callWithRetry/>
    </sequence>
</template>
