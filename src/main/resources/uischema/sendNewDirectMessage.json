                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "text",
                    "displayName": "Message Text",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Text content of the Direct Message."
