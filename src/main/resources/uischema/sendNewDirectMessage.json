{
  "connectorName": "twitter",
  "operationName": "sendNewDirectMessage",
  "title": "Send New Direct Message",
  "help": "Send a one-to-one Direct Message to a specified user, optionally including media attachments.",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configRef",
              "displayName": "Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "twitter"
              ],
              "defaultType": "connection.twitter",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Connection configuration to use for Twitter API calls."
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Parameters",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "participant_id",
                    "displayName": "Participant ID",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "User ID of the account to receive this Direct Message."
                  }
                }
              ]
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Request Body",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "attachments",
                    "displayName": "Attachments (JSON)",
                    "inputType": "stringOrExpression",
