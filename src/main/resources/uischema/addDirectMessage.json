              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "responseVariable",
                    "displayName": "Output Variable Name",
                    "inputType": "string",
                    "deriveResponseVariable": "true",
                    "required": "true",
                    "helpTip": "Name of the variable to which the operation response will be assigned."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "overwriteBody",
                    "displayName": "Overwrite Message Body",
