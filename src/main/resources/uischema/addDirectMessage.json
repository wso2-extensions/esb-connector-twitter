{
  "connectorName": "twitter",
  "operationName": "addDirectMessage",
  "title": "Add Direct Message",
  "help": "Send a Direct Message to a specified Twitter DM conversation.",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configRef",
              "displayName": "Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "twitter"
              ],
              "defaultType": "connection.twitter",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Connection configuration to use for Twitter API calls."
